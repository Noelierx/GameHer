{% spaceless %}
<footer class="page-footer">
		{% if app.request.attributes.get('_route') != 'partners' %}
		{{  render(controller('App\\Controller\\SideController::partners')) }}
		<hr>
		{% endif %}
    <div class="container">
        <div class="row">
            <div class="col l3 hide-on-med-and-down">
                <img style="margin:0; height: 200px;" src="{{ asset('/build/img/logo_footer.png') }}" alt="GameHer">
            </div>
            <div class="col l3 s6 m4">
                <h5>{{ 'footer.title.gameher' |trans }}</h5>
                <ul>
                    <li><a href="{{ path('blog') }}">{{ 'footer.menu.blog'|trans }}</a></li>
                    <li><a href="{{ path('webtv') }}">{{ 'footer.menu.webtv'|trans }}</a></li>
                    <li><a href="{{ path('tournaments') }}">{{ 'footer.menu.tournaments'|trans }}</a></li>
                    <li><a href="{{ path('about') }}">{{ 'footer.menu.about'|trans }}</a></li>
                </ul>
            </div>
            <div class="col l3 s6 m4">
                <h5>{{ 'footer.title.links' |trans }}</h5>
                <ul>
                    <li><a href="{{ path('medias') }}">{{ 'footer.menu.presskit'|trans }}</a></li>
                    <li><a href="{{ path('partners') }}">{{ 'footer.menu.partners'|trans }}</a></li>
                    <li><a href="{{ path('privacy') }}">{{ 'footer.menu.privacy_policy' |trans }}</a></li>
                    <li><a href="{{ path('mentions') }}">{{ 'footer.menu.legal_mention' |trans }}</a></li>
                    {% if app.user is null %}
                        <li><a href="{{ path('connect_discord') }}">{{ 'footer.menu.login'|trans }}</a></li>
                    {% endif %}
                </ul>
            </div>
            <div class="col l3 s12 m4">
                <h5>{{ 'footer.title.follow_us' |trans }}</h5>
                <ul>
                    <li><a href="{{ path('contact')}}">{{ 'footer.menu.contact_us'|trans }}</a></li>
                    <li class="footer__socials">
                        <a href="//twitter.com/GameHer" title="GameHer Twitter"><i class="fab fa-twitter" aria-hidden="true"></i></a>
                        <a href="//facebook.com/GameHer" title="GameHer Facebook"><i class="fab fa-facebook-square" aria-hidden="true"></i></a>
                        <a href="//youtube.com/channel/UCEpAdXm_wIiYXJ5wueVQIcg/featured" title="GameHer Youtube"><i class="fab fa-youtube" aria-hidden="true"></i></a>
                        <a href="//twitch.tv/gamehertv" title="GameHer Twitch"><i class="fab fa-twitch" aria-hidden="true"></i></a>
                        <a href="//discordapp.com/invite/vKpbwh6" title="GameHer Discord"><i class="fab fa-discord" aria-hidden="true"></i></a>
                        <a href="//instagram.com/gameheroff/" title="GameHer Instagram"><i class="fab fa-instagram" aria-hidden="true"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</footer>
{% endspaceless %}
