{% spaceless %}
	{% if paginator.hasToPaginate %}
		<div class="navigation">
			<ul class="pagination">
				{% if paginator.hasPreviousPage %}
					<li class="prev arrow">
						{% if hasAuthor %}
							<a href="{{ path('blog_paginated', {page: paginator.previousPage}) .'?author='.author  }}" rel="previous"><i class="fa fw fa-chevron-left"></i></a>
						{% else %}
							<a href="{{ path('blog_paginated', {page: paginator.previousPage}) }}" rel="previous"><i class="fa fw fa-chevron-left"></i></a>
						{% endif %}
					</li>
				{% endif %}

				{% for i in 1..paginator.lastPage %}
					{% if i == paginator.currentPage %}
						<li class="active"><a>{{ i }}</a></li>
					{% else %}
						{% if hasAuthor %}
							<li><a href="{{ path('blog_paginated', {page: i}) .'?author='.author  }}">{{ i }}</a></li>
						{% else %}
							<li><a href="{{ path('blog_paginated', {page: i}) }}">{{ i }}</a></li>
						{% endif %}
					{% endif %}
				{% endfor %}

				{% if paginator.hasNextPage %}
					{% if hasAuthor %}
						<li class="next arrow"><a href="{{ path('blog_paginated', {page: paginator.nextPage}) .'?author='.author  }}" rel="next"><i class="fa fw fa-chevron-right"></i></a></li>
					{% else %}
						<li class="next arrow"><a href="{{ path('blog_paginated', {page: paginator.nextPage}) }}" rel="next"><i class="fa fw fa-chevron-right"></i></a></li>
					{% endif %}
				{% endif %}
			</ul>
		</div>
	{% endif %}
{% endspaceless %}
